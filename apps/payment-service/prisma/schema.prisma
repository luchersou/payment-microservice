generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Payment {
  id        String        @id @default(uuid())
  orderId   String        @unique
  amount    Float
  status    PaymentStatus @default(PROCESSING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

enum PaymentStatus {
  PROCESSING
  APPROVED
  DECLINED
  REFUNDED
  FAILED
}
