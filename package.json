{
  "name": "payment-microservice",
  "version": "1.0.0",
  "description": "Microservice for payment processing",
  "author": "Lucas Herzinger Souza",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build:api-gateway": "nest build api-gateway",
    "build:order-service": "nest build order-service",
    "build:payment-service": "nest build payment-service",
    "build:libs": "nest build messaging",
    "build": "npm run build:libs && npm run build:api-gateway && npm run build:order-service && npm run build:payment-service",
    
    "start:dev": "concurrently \"npm run start:api-gateway:dev\" \"npm run start:order:dev\" \"npm run start:payment:dev\"",
    
    "start:api-gateway": "nest start api-gateway",
    "start:api-gateway:dev": "nest start api-gateway --watch",
    "start:order": "nest start order-service",
    "start:order:dev": "nest start order-service --watch",
    "start:payment": "nest start payment-service",
    "start:payment:dev": "nest start payment-service --watch",
    
    "start:prod:api-gateway": "node dist/apps/api-gateway/main.js",
    "start:prod:order": "node dist/apps/order-service/main.js",
    "start:prod:payment": "node dist/apps/payment-service/main.js",
    
    "prisma:generate": "prisma generate --schema=./libs/database/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./libs/database/prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema=./libs/database/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./libs/database/prisma/schema.prisma",
    
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v",
    
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "format": "prettier --write \"{apps,libs}/**/*.ts\"",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.1.12",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "pg": "^8.18.0",
    "prisma": "^7.3.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
