{
  "name": "payment-microservice",
  "version": "1.0.0",
  "description": "Microservice for payment processing",
  "author": "Lucas Herzinger Souza",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build api && nest build worker",
    "start:api": "nest start api",
    "start:api:dev": "nest start api --watch",
    "start:worker": "nest start worker",
    "start:worker:dev": "nest start worker --watch",
    "start:prod:api": "node dist/apps/api/main.js",
    "start:prod:worker": "node dist/apps/worker/main.js",
    "format": "prettier --write \"apps/**/*.ts\"",
    "lint": "eslint \"apps/**/*.ts\" --fix"
  },
  "workspaces": [
    "apps/api",
    "apps/worker"
  ],
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.1.12",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.9",
    "pg": "^8.18.0",
    "prisma": "^7.3.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
